<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" android:layout_marginBottom="592dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/morning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/asaBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="@string/evening_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/banBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="@string/afternoon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hiruBtn"
            app:layout_constraintStart_toEndOf="@+id/asaBtn"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/banBtn"
            android:layout_marginEnd="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.483"/>

</androidx.constraintlayout.widget.ConstraintLayout>